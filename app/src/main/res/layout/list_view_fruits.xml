<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:id="@+id/fruits_list_outer_layout">

    <ImageView
        android:id="@+id/image_view_fruits"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="2"
        />

    <LinearLayout
        android:id="@+id/fruits_name_and_rate_outer_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/text_view_fruits_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ksdlffds"/>
        <TextView
            android:id="@+id/text_view_fruits_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kldsjfa"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fruits_amount_and_add_symbol_outer_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_weight="4"
        >
        <TextView
            android:id="@+id/text_view_fruits_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sajdlfkas;"
            android:layout_weight="5"
            android:gravity="center"/>
        <TextView
            android:id="@+id/text_view_fruits_add_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="klajflkajd"
            android:layout_weight="5"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>