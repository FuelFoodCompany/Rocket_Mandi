<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:id="@+id/home_screen_layout">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorAppTheme"
        android:layout_marginTop="0dp"
        android:layout_weight="0.4">
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rocket Mandi"
        android:textColor="@color/colorTextWhite"
        android:textStyle="bold"
        android:textSize="@dimen/app_title_text_size" />
        <TextView
            android:id="@+id/subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="सब से तेज सब से अच्छी"
            android:textSize="15dp"
            android:textColor="@color/colorTextWhite" />

    </LinearLayout>
<android.support.v4.view.ViewPager

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_weight="9.2"
    >

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/toolbar_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:weightSum="3">
        />
        <LinearLayout
            android:id="@+id/toolbar_home_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/toolbar_home_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_50" />
            <TextView
                android:id="@+id/toolbar_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOME" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/toolbar_shopping_cart_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/toolbar_shopping_cart_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shopping_cart_48" />
            <TextView
                android:id="@+id/toolbar_shopping_cart_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHOPPING CART"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/toolbar_profile_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/toolbar_profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/contacts_50" />
            <TextView
                android:id="@+id/toolbar_profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROFILE"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>