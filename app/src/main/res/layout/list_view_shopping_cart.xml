<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:weightSum="10"
    android:background="@color/colorWhite"
    android:clickable="true">


    <TextView
        android:id="@+id/product_name_text_view_in_shopping_cart_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:text="onion\nPyaaj"/>
    <LinearLayout
        android:id="@+id/unit_and_rate_layout_in_shopping_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2.5"
        android:weightSum="10">

        <TextView
            android:id="@+id/unit_text_view_in_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Rate"/>

        <TextView
            android:id="@+id/rate_text_view_in_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/quantity_brought_and_quantity_layout_in_shopping_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2.5"
        android:weightSum="10">

        <TextView
            android:id="@+id/quantity_brought_text_view_in_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Quantity Brought"/>

        <TextView
            android:id="@+id/quantity_text_view_in_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/total_amount_layout_in_shopping_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2.5"
        android:weightSum="10">

        <TextView
            android:id="@+id/total_text_view_in_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Total"/>

        <TextView
            android:id="@+id/total_amount_text_view_in_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

        <TextView
            android:id="@+id/delete_product_in_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"/>

    </LinearLayout>

</LinearLayout>