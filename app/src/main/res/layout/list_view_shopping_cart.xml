<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:weightSum="10"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/product_name_text_view_in_shopping_cart_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:textColor="@color/colorBlack"
        android:layout_weight="2.5"
        android:gravity="center_vertical"/>


     <TextView
            android:id="@+id/rate_text_view_in_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         android:background="@color/colorWhite"
         android:textColor="@color/colorBlack"
            android:layout_weight="2.5"
         android:gravity="center_vertical"/>

    <TextView

            android:id="@+id/total_amount_text_view_in_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:textColor="@color/colorBlack"
            android:layout_weight="2.5"
        android:gravity="center_vertical"/>


    <LinearLayout
        android:id="@+id/total_amount_layout_in_shopping_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:layout_weight="2.5"
        android:weightSum="10"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:id="@+id/quantity_text_view_in_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            android:layout_weight="5"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/delete_product_in_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:src="@drawable/ic_delete_forever_black_24dp"/>

    </LinearLayout>

</LinearLayout>