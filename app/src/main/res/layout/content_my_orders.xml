<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thefuelcompany.rocketmandi.MyOrders"
    android:gravity="center_horizontal"
    android:weightSum="10">


    <ListView
        android:id="@+id/my_orders_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal|center_vertical">

    <Button
        android:id="@+id/finish_activity_my_orders_button"
        android:layout_width="@dimen/log_in_fields_width"
        android:layout_height="wrap_content"
        android:text="FINISH"
        android:textSize="@dimen/log_in_fields_text_size"
        android:background="@color/colorAppThemeSeaGreen"
        android:textColor="@color/colorWhite"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorWhite">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"/>

    </LinearLayout>

</LinearLayout>
